{
  "splits": {
    "train": 10304,
    "validation": 3436,
    "test": 3434
  },
  "columns": [
    "timestamp",
    "open",
    "high",
    "low",
    "close",
    "volume",
    "returns",
    "log_returns",
    "price_range",
    "body_size",
    "volume_ma_5",
    "volume_ratio",
    "hour",
    "day_of_week",
    "is_weekend"
  ],
  "date_range": {
    "start": "2025-07-29 00:00:00+00:00",
    "end": "2025-09-26 18:05:00+00:00"
  },
  "config_used": {
    "project": "AXON Financial ML Pipeline",
    "version": "1.0.0",
    "data": {
      "sources": [
        "yahoo"
      ],
      "symbols": [
        "BTC-USD"
      ],
      "interval": "5m",
      "lookback_days": 60,
      "quality": {
        "min_rows_test": 50,
        "drop_na_policy": "strict"
      },
      "cache": {
        "enabled": true,
        "dir": "data/cache"
      },
      "raw_path": "data/raw",
      "processed_path": "data/processed",
      "start_date": "2019-01-01",
      "end_date": "2024-12-31",
      "timeframe": "1m"
    },
    "features": {
      "returns": [
        "1m",
        "5m",
        "15m",
        "1h"
      ],
      "ema_periods": [
        5,
        20,
        50
      ],
      "rsi_period": 14,
      "imbalance_window": 10,
      "bollinger_period": 20,
      "bollinger_std": 2
    },
    "labels": {
      "method": "sign_return_h",
      "horizon": "15m",
      "barrier_method": "triple_barrier",
      "take_profit": 0.02,
      "stop_loss": 0.01,
      "timeout": "4h"
    },
    "models": {
      "train": [
        "lightgbm",
        "randomforest"
      ],
      "lightgbm": {
        "n_estimators": 100,
        "learning_rate": 0.05,
        "num_leaves": 31,
        "max_depth": -1,
        "min_child_samples": 20,
        "subsample": 0.8,
        "colsample_bytree": 0.8,
        "reg_alpha": 0.1,
        "reg_lambda": 0.1
      },
      "randomforest": {
        "n_estimators": 100,
        "max_depth": 10,
        "min_samples_split": 5,
        "min_samples_leaf": 2,
        "max_features": "sqrt"
      }
    },
    "backtest": {
      "strategy": "long_if_prob_gt",
      "threshold": 0.55,
      "position_size": 0.1,
      "take_profit": 0.02,
      "stop_loss": 0.01,
      "timeout": "4h",
      "commission": 0.001
    },
    "gpu": {
      "enable": true,
      "platform_id": 0,
      "device_id": 0
    },
    "outputs": {
      "models": "outputs/models",
      "artifacts": "outputs/artifacts",
      "reports": "outputs/reports",
      "ledgers": "outputs/ledgers"
    },
    "target": "y",
    "intelligence": {
      "error_lens": {
        "volatility_window": 20,
        "trend_window": 10,
        "regime_threshold": 0.5
      },
      "memory": {
        "max_entries": 1000,
        "decay_factor": 0.95
      },
      "decision": {
        "min_sharpe": 1.0,
        "min_win_rate": 0.55,
        "max_drawdown": 0.2
      }
    },
    "telegram": {
      "enabled": true,
      "bot_token_env": "TELEGRAM_BOT_TOKEN",
      "chat_id_env": "TELEGRAM_CHAT_ID",
      "notifications": {
        "pipeline_start": true,
        "pipeline_end": true,
        "model_promotion": true,
        "gate_failures": true,
        "errors": true
      }
    },
    "optimization": {
      "enabled": false,
      "n_trials": 100,
      "models": [
        "lightgbm"
      ],
      "pruning": true,
      "early_stopping_rounds": 20
    }
  }
}